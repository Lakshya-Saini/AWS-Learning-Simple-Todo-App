FROM node:22-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Stage 2: Serve with Nginx
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
# (Optional) Add custom nginx.conf if needed, but default works for simple apps
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]